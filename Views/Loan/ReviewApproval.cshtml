@model SycamoreWebApplication.DTOs.LoanDTO

@{
    ViewData["Title"] = "ReviewApproval";
}


@{
    ViewData["Title"] = "Update";
}

<div class="col-12 grid-margin">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Loan Details</h4>
            <form class="form-sample">
                @*<p class="card-description">
            Personal info
        </p>*@
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Loan Type</label>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.LoanTypeId)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Title</label>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.Title)

                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Gender</label>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.Gender)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Last Name*</label>
                            <div class="col-sm-9">
                                @Html.DisplayFor(model => model.Gender)
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">First Name*</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Maiden*</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Mobile Number*</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Other Number</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">DOB</label>
                            <div class="col-sm-9">
                                <input class="form-control" placeholder="dd/mm/yyyy" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">ID Type</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Passport</option>
                                    <option>Mzika ID</option>
                                    <option>Drivers License</option>

                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">ID Number</label>
                            <div class="col-sm-9">
                                <input class="form-control" placeholder="GNH7839223" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Nationality</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Malawian</option>
                                    <option>Ugandan</option>
                                    <option>Zimbabwean</option>
                                    <option>American</option>
                                </select>
                            </div>
                        </div>
                    </div>

                </div>
                @*<p class="card-description">
            Address
        </p>*@
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Region</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Central</option>
                                    <option>North</option>
                                    <option>South</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Districts</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Blantyre</option>
                                    <option>Chitipa</option>
                                    <option>Lilongwe</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Village</label>
                            <div class="col-sm-9">
                                <select class="form-control">
                                    <option>Mpemba</option>
                                    <option>Chikulamayembe</option>
                                    <option>Chinsapo</option>
                                </select>
                            </div>
                        </div>
                    </div>


                </div>
                <div class="row">
                    <div class="col-md-6 justify-content-center">
                        <div class="form-group row">
                            <label class="col-sm-6 col-form-label">Physical/Residential address</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Work address</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Occupation</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-6 col-form-label">Employer's Name</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Department</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>

                </div>


                <div class="row">

                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-6 col-form-label">Work Telephone</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group row">
                            <label class="col-sm-5 col-form-label">Date Joined</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" />
                            </div>
                        </div>
                    </div>

                </div>

                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LoanId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LoanId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.LoanTypeId)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.LoanTypeId)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.PurposeOfLoan)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PurposeOfLoan)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.BasicSalary)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.BasicSalary)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.NetSalaryAsPerCurrentPaySlip)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.NetSalaryAsPerCurrentPaySlip)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.TotalLoanAmount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TotalLoanAmount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.CreatedBy)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.CreatedBy)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DateCreated)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DateCreated)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.ModifiedBy)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ModifiedBy)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.DateModified)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.DateModified)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsActive)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsActive)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.IsArchived)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.IsArchived)
                    </dd>
                </dl>
            </form>
            <div class="row">
                <div class="col-12 text-right">

                    <a asp-action="Create" class="btn btn-sm btn-success m-2">Update Loan</a>
                    <a asp-action="Create" class="btn btn-sm btn-primary m-2">Calculate Loan</a>
                </div>
            </div>
        </div>
    </div>
</div>



<div>
    <h4>Loan</h4>
    <hr />
    
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
